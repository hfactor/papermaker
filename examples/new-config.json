{
    "timeRange": {
        "startYear": 2026,
        "startMonth": 1,
        "durationMonths": 12
    },
    "output": {
        "pageSize": "a4",
        "orientation": "portrait",
        "exportMode": "single-pdf"
    },
    "language": {
        "lang": "en",
        "direction": "ltr",
        "dateFormat": "DD",
        "timeFormat": "24h"
    },
    "colors": {
        "dark1": "#000000",
        "dark2": "#555555",
        "light1": "#ffffff",
        "light2": "#f5f5f5",
        "accent": "#007bff",
        "weekendHighlight": "#eef6ff"
    },
    "typography": {
        "primaryFont": "Lato",
        "secondaryFont": "Inter",
        "fontScale": 1.0
    },
    "week": {
        "startDay": "monday",
        "weekendDays": [
            "saturday",
            "sunday"
        ],
        "showIsoWeekNumbers": true
    },
    "noteArea": {
        "layout": "grid",
        "density": "medium"
    },
    "guides": {
        "pageCenter": false,
        "horizontalThirds": false,
        "verticalThirds": false
    },
    "planner": {
        "enabled": [
            "day",
            "week"
        ],
        "startTime": "00:00",
        "endTime": "24:00",
        "slotDuration": 60,
        "timeFormat": "24h"
    },
    "generation": {
        "order": "sequential",
        "pages": {
            "cover": {
                "enabled": true,
                "title": "My 2026 Planner",
                "image": ""
            },
            "year": {
                "enabled": true,
                "layout": "grid",
                "labels": true,
                "weekNumbers": true
            },
            "quarter": {
                "enabled": true,
                "columns": 3,
                "notes": true
            },
            "month": {
                "enabled": true,
                "gridView": true,
                "weekNumbers": true,
                "labels": "full"
            },
            "week": {
                "enabled": true,
                "headerStyle": "minimal",
                "planner": true
            },
            "day": {
                "enabled": true,
                "columnSide": "right",
                "cardSize": "medium",
                "planner": true,
                "notes": true
            }
        }
    },
    "linking": {
        "hyperlinks": true
    },
    "print": {
        "margins": 10,
        "bleed": 0,
        "colorProfile": "srgb"
    }
}